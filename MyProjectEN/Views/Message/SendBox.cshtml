
@using EntityLayer.Concrete
@model List<Message2>


@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<h1>SendBox</h1>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Subject</th>
        <th>Receiver</th>
        <th>Date</th>
        <th>Open Message</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <td>@item.Subject</td>
            <td>@item.ReceiverUser.WriterName</td>
            <td> @(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
            <td> <a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Open Message</a></td>
        </tr>
    }

</table>
<a href="/Message/SendMessage/" class="btn btn-primary">Create a new message</a>
